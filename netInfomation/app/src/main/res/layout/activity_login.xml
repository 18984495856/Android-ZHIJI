<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:gravity="center"
    >
    <ImageView android:id="@+id/login_img_head"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView android:id="@+id/login_text_id"
            style="@style/normalFont"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/login_id"
            android:layout_alignParentLeft="true"/>
        <EditText android:id="@+id/login_edit_id"
            style="@style/normalFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/login_text_id"/>
        <TextView android:id="@+id/login_text_password"
            style="@style/normalFont"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/login_password"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/login_text_id"/>
        <EditText android:id="@+id/login_edit_password"
            style="@style/normalFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_edit_id"
            android:layout_toRightOf="@id/login_text_password"/>
        <Button android:id="@+id/login_bt_login"
            style="@style/whiteFont"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_button"
            android:layout_below="@id/login_text_password"
            android:layout_centerInParent="true"
            android:text="登录"
            android:gravity="center"
            />
    </RelativeLayout>

</LinearLayout>